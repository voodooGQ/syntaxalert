{% if posts %}
    <h1 class="hdg hdg_1 vr">Search Results for "{{searchTerm|raw}}"</h1>
    {% for post in posts %}
		<div class="vr">
			<h2 class="hdg hdg_2 vr_half">
				<a href="{{post.permalink}}">{{ post.title|raw }}</a>
			</h2>
			<div>
                <span class="date"><span class="fa fa-calendar"></span> [{{post.date}}]</span> {{ post.excerpt|raw }} <a href="{{post.permalink}}">More</a>
			</div>
		</div>
    {% endfor %}
{% else %}
    <h1 class="hdg hdg_1 vr">Sorry, no results were founds for "{{searchTerm|raw}}"</h1>
    <p>Please try your search again.</p>
{% endif %}
