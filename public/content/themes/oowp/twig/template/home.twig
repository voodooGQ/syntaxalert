{% if posts %}
    {% for post in posts %}
		<div class="vr">
			<h2 class="hdg hdg_2 vr_half">
				<a href="{{post.permalink}}">{{ post.title|raw }}</a>
			</h2>
			<div class="userContent">
				<span class="date">[{{post.date}}]</span> {{ post.excerpt|raw }} <a href="{{post.permalink}}">More</a>
			</div>
		</div>
    {% endfor %}
{% endif %}
